<!DOCTYPE html>
<html lang="en">
<head>
  <title>Notes</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>All Notes</h1>
  <a href="/notes/new">Create New Note</a>
  <ul>
    <% notes.forEach(note => { %>
      <li>
        <a href="/notes/<%= note.id %>"><%= note.title %></a>
        <form action="/notes/<%= note.id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>